# Database
DB_NAME=tcomp_db
DB_USER=tcomp_user
DB_PASSWORD=tcomp_password
DB_HOST=localhost
DB_PORT=5432

# Django
SECRET_KEY=change-me
DEBUG=True
DJANGO_SETTINGS_MODULE=tcomp.settings.dev
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend source (for image import commands)
TCOMP_SRC=../tcomp

# Storage (set STORAGE_BACKEND=r2 for production)
STORAGE_BACKEND=local
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=tcomp-storage
R2_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
AWS_S3_CUSTOM_DOMAIN=

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:6001,http://localhost:3000

# Redis (three separate DBs)
CELERY_BROKER_URL=redis://localhost:6379/0
CACHE_REDIS_URL=redis://localhost:6379/1
SSE_REDIS_URL=redis://localhost:6379/2

# Web Push VAPID keys (generate with: python manage.py generate_vapid_keys)
